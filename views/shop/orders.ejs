<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1 class="empty-text">You have not made any orders yet</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                     
                        <li class="orders__item">
                            <h1>Order - # <%= order._id %> - <a href="/orders/<%= order._id %>">Invoice</a></h1>
                            <div class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <div class="orders__products-item"><%= p.quantity %> x <%= p.product.title %> </div>
                                    <div>$ <%= p.product.price.toFixed(2) %></div>
                                <% }); %>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>